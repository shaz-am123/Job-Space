<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/jpg" href="../assests/favicon.ico"/>
    <title>JOB SPACE-A job portal for graduates</title>
	<link href="/css/profile_listing.css" rel="stylesheet">
    </head>
    <style>
        .applybutton{
            display: flex;
            flex-direction: row;
            align-items:center;
            justify-content: space-evenly;
        }
				.cv img{
					width: 2rem;
				}
    </style>
<body>
    <%- include('header.ejs')%>
    <div class="wrap">
        <div class="search">
					<form class="search" method="post"  action="/profile_listing" >
						<input type="text" class="searchTerm" id="searchbar" name="searchInput" placeholder="What are you looking for?">
            <button type="submit" name="searchButton" class="searchButton">
              <i  class="fa fa-search" ></i>
           </button>
					</form>
        </div>
     </div>
     <div class="list__job">

<% var count = 0 ; %>
<div class="parentjob">

<% rows.forEach(function(row){ %>
	 <form class="applybutton" action="/delete" method="post">
         <div class="job__card">
             <div class="headimg">
                 <div class="head__job">
                     <div class="desig"><%=row.name%></div>
                 </div>
             </div>
             <div class="rest">
                <div class="salary"><div class="head__Salary">Email</div><div class="salary_num"><%=row.email%></div></div>
                <div class="location"><div class="head__loca">Major</div><div class="Locationtext"><%=row.major%></div></div>
            </div>
             <div class="rest">
                 <div class="salary"><div class="head__Salary">CGPA</div><div class="salary_num"><%=row.cgpa%></div></div>
                 <div class="duration"><div class="head__Applyby">Batch</div><div class="applyby"><%=row.batch%></div></div>
                 <div class="location"><div class="head__loca">Skill Set</div><div class="Locationtext"><%=row.skill_set_name%></div></div>
             </div>
             <div class="rest">
                <div class="salary"><div class="head__Salary">CV</div><div class="salary_num"><a target="_blank" href="<%=row.cv%>" class="cv"><img src="/images/cv.png"></img> </a></div></div>
             </div>
             <div class="applybutton" >
                 <button type = "submit" value = "<%=JSON.stringify(rows[count])%>" name="acceptbutton" class="apply">Accept</button>
							 </br>
								 <button type = "submit" value = "<%=JSON.stringify(rows[count])%>" name="rejectbutton" class="apply">Reject</button>
             </div>
         </div>
				 </form>
				 <%count = count + 1 ; %>
         <% }); %>
			 </div>
     </div>
</body>
</html>
